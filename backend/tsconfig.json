{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": ":dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./"
  },
  "include": ["./src"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
